<project>

	<path id="class.path">
		<pathelement location="build/classes"/>
		<pathelement location="lib/Tools2008.jar"/>
		<pathelement path="!{java.class.path}" />
	</path>


	<target name="clean">
		<delete dir="build" />
		<delete file="csp.jar"/>
	</target>

	<target name="compile">
	<mkdir dir="build/classes" />
	<javac srcdir="src" destdir="build/classes" includeantruntime="true" >
		<classpath refid="class.path" />
	</javac>
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="build/jar" />
		<jar destfile="builder/jar/csp.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="solve.Main" />
			</manifest>
			<zipgroupfileset dir="lib/" includes="**/*.jar" />
		</jar>
		<copy file="build/jar/csp.jar" tofile="csp.jar" />
	</target>

</project>